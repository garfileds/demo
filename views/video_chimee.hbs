<!DOCTYPE html>
<html>
<head>
  <title>H5 video 兼容性测试</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/demo/stylesheets/video/chimee-player.browser.css">

  <style>
    * {
      padding: 0;
      margin: 0;
    }

    .wrap {
      position: relative;
      height: 100vh;
    }

    .video_box {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .inner {
      height: 100%;
      z-index: 1;
    }

    .inner.bg {
      background-image: url('/demo/images/video/bg.webp');
      background-color: #5f9ea0;
      background-size: cover;
    }

    .inner_content {
      color: #fff;
      height: 200px;
      font-size: 20px;
      line-height: 30px;
      padding: 200px 0 0 30px;
    }

    .invisible {
      opacity: 0;
    }

    video {
      object-fit: fill;
    }
  </style>
</head>
<body>
<div class="wrap">
  <div class="inner">
    <p class="inner_content invisible">去做最幸福的人</p>
  </div>

  <div id="video" class="video_box"></div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/chimee/0.10.5/index.browser.js"></script>
<script>
  const video = new Chimee({
    wrapper: '#video',
    src: '/demo/video/opening.mp4',
    autoplay: true,
    controls: false,
    playsInline: true,
    preload: 'auto',
    x5VideoPlayerFullscreen: true,
    x5VideoOrientation: true,
    xWebkitAirplay: true,
    x5VideoPlayerType: 'h5',
    muted: true,
    defaultMuted: true
  })
  // canplay 事件存在兼容性问题
  video.on('canplaythrough', function () {
    video.play()
  })

  video.on('ended', function () {
    document.querySelector('.inner_content').className = 'inner_content'
  })
</script>
</body>
</html>
